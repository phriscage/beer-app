<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<GenerateJWT async="false" continueOnError="false" enabled="true" name="GenerateJWT">
    <DisplayName>GenerateJWT</DisplayName>
    <FaultRules/>
    <Properties/>
    <AdditionalClaims>
        <Claim name="client_id" ref="apigee.client_id" type="string"/>
        <Claim name="access_token" ref="apigee.access_token" type="string"/>
        <Claim array="true" name="api_product_list" ref="apiProductList" type="string"/>
        <Claim name="application_name" ref="apigee.developer.app.name" type="string"/>
        <Claim name="developer_email" ref="apigee.developer.email" type="string"/>
        <Claim array="true" name="scopes" ref="scope" type="string"/>
        <Claim name="username" ref="credentials.username" type="string"/>
    </AdditionalClaims>
    <AdditionalHeaders/>
    <Algorithm>RS256</Algorithm>
    <Audience>istio</Audience>
    <ExpiresIn>2h</ExpiresIn>
    <IgnoreUnresolvedVariables>false</IgnoreUnresolvedVariables>
    <Issuer>urn://chrispage-eval.apigee.net</Issuer>
    <NotBefore ref="nbf"/>
    <OutputVariable>jwt_signed</OutputVariable>
    <PrivateKey>
        <Value ref="private.privateKey"/>
        <Id ref="private.certificate1_kid"/>
    </PrivateKey>
    <Subject ref="apigee.client_id"/>
</GenerateJWT>