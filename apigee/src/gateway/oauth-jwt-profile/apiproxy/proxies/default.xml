<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <DefaultFaultRule name="DefaultFaultRule">
        <Step>
            <FaultRules/>
            <Name>AddCORS</Name>
        </Step>
        <AlwaysEnforce>true</AlwaysEnforce>
    </DefaultFaultRule>
    <Description/>
    <FaultRules/>
    <Flows>
        <Flow name="/authorize">
            <Description/>
            <Request>
                <Step>
                    <Name>AuthorizationParameterValidation</Name>
                </Step>
                <Step>
                    <Name>RaiseParameterValidationFault</Name>
                    <Condition>(parameterValidation.fault != null)</Condition>
                </Step>
                <Step>
                    <Name>VerifyAPIKeyUrl</Name>
                </Step>
                <Step>
                    <Name>GetOAuthIdPConfig</Name>
                </Step>
                <Step>
                    <Name>AuthorizationDelegationValidation</Name>
                </Step>
                <Step>
                    <Name>RaiseDelegationValidationFault</Name>
                    <Condition>(delegationValidation.fault != null)</Condition>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>GenerateRedirect</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/authorize") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="/authorize (code)">
            <Description/>
            <Request>
                <Step>
                    <Name>ExtractCredentials</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GenerateAuthorizationCode</Name>
                </Step>
                <Step>
                    <Name>SetAuthCodeCreds</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GenerateAuthorizationCodeResponse</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/authorize") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="/authorize (ws-fed)">
            <Description/>
            <Request>
                <Step>
                    <Name>ParseParams</Name>
                </Step>
                <Step>
                    <Name>AssignWsResult</Name>
                </Step>
                <Step>
                    <Name>ExtractXmldata</Name>
                </Step>
                <Step>
                    <Name>DecodeWSFedParams</Name>
                </Step>
                <Step>
                    <Name>SamlValidation</Name>
                </Step>
                <Step>
                    <Name>SamlValidationStatus</Name>
                </Step>
                <Step>
                    <Name>GenerateAuthorizationCodeQueryParam</Name>
                </Step>
                <Step>
                    <Name>SetAuthCodeWSFedAttributes</Name>
                </Step>
                <Step>
                    <Name>GenerateAuthorizationCodeQueryParamResponse</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/authorize/ws-fed") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="/token">
            <Description/>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/token") and (request.verb = "DELETE")</Condition>
        </Flow>
        <Flow name="/token">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>RefreshAccessToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/token") and (request.verb = "PUT")</Condition>
        </Flow>
        <Flow name="/token (code:jwt)">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>VerifyAPIKey</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>SetJWTVariables</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GetJWTSecret</Name>
                </Step>
                <Step>
                    <Name>GetAuthCodeCreds</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GenerateJWT</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GenerateAccessTokenCodeJWT</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>
                (proxy.pathsuffix MatchesPath "/token")
            and (request.verb = "POST")
            and (request.formparam.grant_type == "authorization_code")
            and (request.formparam.token_format == "jwt")
            </Condition>
        </Flow>
        <Flow name="/token (code)">
            <Description/>
            <Request>
                <Step>
                    <Name>GetAuthCodeCreds</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GenerateAccessTokenCode</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>
                (proxy.pathsuffix MatchesPath "/token")
            and (request.verb = "POST")
            and (request.formparam.grant_type == "authorization_code")
            </Condition>
        </Flow>
        <Flow name="/token (client:jwt)">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>GenerateAccessTokenClientFalse</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>SetProxyHostVariable</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>SetJWTVariables</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GetJWTSecret</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GenerateJWT</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GenerateAccessTokenClientJWT</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>
                (proxy.pathsuffix MatchesPath "/token")
            and (request.verb = "POST")
            and (request.formparam.grant_type == "client_credentials")
            and (request.formparam.token_format == "jwt")
            </Condition>
        </Flow>
        <Flow name="/token (client)">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>GenerateAccessTokenClient</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>
                (proxy.pathsuffix MatchesPath "/token")
            and (request.verb = "POST")
            and (request.formparam.grant_type == "client_credentials")
            </Condition>
        </Flow>
        <Flow name="/token (implicit:jwt)">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>SetJWTVariables</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GetJWTSecret</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>SetResponseTypeToken</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GenerateJWT</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GenerateAccessTokenImplicitJWT</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>
                (proxy.pathsuffix MatchesPath "/token")
            and (request.verb = "POST")
            and (request.formparam.grant_type == "implicit")
            and (request.formparam.token_format == "jwt")
            </Condition>
        </Flow>
        <Flow name="/token (implicit)">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>GenerateAccessTokenImplicit</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>
                (proxy.pathsuffix MatchesPath "/token")
            and (request.verb = "POST")
            and (request.formparam.grant_type == "implicit")
            </Condition>
        </Flow>
        <Flow name="/token (jwt-bearer:jwt)">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>VerifyAPIKey</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>DynamicTargetUrl</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>RetriveJWKs</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>VerifyJWTBearer</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>SetJWTVariables</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GetJWTSecret</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GenerateJWTBearerJWT</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>ReplaceGrantTypeClient</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GenerateAccessTokenJWTBearerJWT</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>
                (proxy.pathsuffix MatchesPath "/token")
            and (request.verb = "POST")
            and (request.formparam.grant_type == "urn:ietf:params:oauth:grant-type:jwt-bearer")
            and (request.formparam.token_format == "jwt")
            </Condition>
        </Flow>
        <Flow name="/token (jwt-bearer)">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>VerifyAPIKey</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>DynamicTargetUrl</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>RetriveJWKs</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>VerifyJWTBearer</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>ReplaceGrantTypeClient</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GenerateAccessTokenJWTBearer</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>
                (proxy.pathsuffix MatchesPath "/token")
            and (request.verb = "POST")
            and (request.formparam.grant_type == "urn:ietf:params:oauth:grant-type:jwt-bearer")
            </Condition>
        </Flow>
        <Flow name="/token (password:jwt)">
            <Description/>
            <Request>
                <Step>
                    <Condition>request.formparam.client_id != null</Condition>
                    <FaultRules/>
                    <Name>VerifyAPIKey</Name>
                </Step>
                <Step>
                    <Condition>request.formparam.client_id != null</Condition>
                    <FaultRules/>
                    <Name>ReplaceGrantTypeClient</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>SetJWTVariables</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GetJWTSecret</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GenerateJWT</Name>
                </Step>
                <Step>
                    <Condition>request.formparam.client_id != null</Condition>
                    <FaultRules/>
                    <Name>GenerateAccessTokenClientJWTExternalAuth</Name>
                </Step>
                <Step>
                    <Condition>request.formparam.client_id == null</Condition>
                    <FaultRules/>
                    <Name>GenerateAccessTokenClientJWT</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>
                (proxy.pathsuffix MatchesPath "/token")
            and (request.verb = "POST")
            and (request.formparam.grant_type == "password")
            and (request.formparam.token_format == "jwt")
            </Condition>
        </Flow>
        <Flow name="/token (password)">
            <Description/>
            <Request>
                <Step>
                    <Condition>request.formparam.client_id != null</Condition>
                    <FaultRules/>
                    <Name>VerifyAPIKey</Name>
                </Step>
                <Step>
                    <Condition>request.formparam.client_id != null</Condition>
                    <FaultRules/>
                    <Name>ReplaceGrantTypeClient</Name>
                </Step>
                <Step>
                    <Condition>request.formparam.client_id != null</Condition>
                    <FaultRules/>
                    <Name>GenerateAccessTokenClientExternalAuth</Name>
                </Step>
                <Step>
                    <Condition>request.formparam.client_id == null</Condition>
                    <FaultRules/>
                    <Name>GenerateAccessTokenPassword</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>
                (proxy.pathsuffix MatchesPath "/token")
            and (request.verb = "POST")
            and (request.formparam.grant_type == "password")
            </Condition>
        </Flow>
        <Flow name="/token (saml-bearer:jwt)">
            <Description/>
            <Request/>
            <Response/>
            <Condition>
                (proxy.pathsuffix MatchesPath "/token")
            and (request.verb = "POST")
            and (request.formparam.grant_type == "urn:ietf:params:oauth:grant-type:saml2-bearer")
            and (request.formparam.token_format == "jwt")
            </Condition>
        </Flow>
        <Flow name="/token (saml-bearer)">
            <Description/>
            <Request/>
            <Response/>
            <Condition>
                (proxy.pathsuffix MatchesPath "/token")
            and (request.verb = "POST")
            and (request.formparam.grant_type == "urn:ietf:params:oauth:grant-type:saml2-bearer")
            </Condition>
        </Flow>
        <Flow name="/token/introspect">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>VerifyOAuthToken</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>RemoveHeaderAuthorization</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GenerateTokenResponse</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/token/introspect") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="/token/introspect/jwt">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>GetPublicKeys</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>VerifyOAuthToken</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>RemoveHeaderAuthorization</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>VerifyJWT</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GenerateTokenResponseJWT</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/token/introspect/jwt") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="/certs">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>GetPublicKeys</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GenerateJWKs</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <FaultRules/>
                    <Name>SendJWKMessage</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/certs") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="/user">
            <Description/>
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>VerifyOAuthToken</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>SampleUserResponse</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/user") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="/.well-known/jwks.json">
            <Request>
                <Step>
                    <FaultRules/>
                    <Name>GetPublicKeys</Name>
                </Step>
                <Step>
                    <FaultRules/>
                    <Name>GenerateJWKs</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <FaultRules/>
                    <Name>SendJWKMessage</Name>
                </Step>
            </Response>
            <Condition>(proxy.pathsuffix MatchesPath "/.well-known/jwks.json") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="NotFound">
            <Description/>
            <Request>
                <Step>
                    <Name>NotFound</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/*")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <FaultRules/>
                <Name>CreateISO8601</Name>
            </Step>
            <Step>
                <FaultRules/>
                <Name>GetOAuthConfig</Name>
            </Step>
        </Request>
        <Response>
            <Step>
                <Condition>request.verb = "OPTIONS"</Condition>
                <FaultRules/>
                <Name>AddCORS</Name>
            </Step>
            <Step>
                <FaultRules/>
                <Name>AddAuthorizationHeaderResponse</Name>
            </Step>
        </Response>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/v2/oauth</BasePath>
        <Properties/>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="NoRoute"/>
</ProxyEndpoint>
